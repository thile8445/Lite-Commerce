@model IEnumerable<LiteCommerce.DomainModels.Product>
@{
    int i = 0;
    ViewBag.Title = "Manage Product";
}
<div class="box box-primary">
    <div class="box-body">
        <div class="input-group input-group-sm">
            <input type="text" class="form-control" placeholder="Input search value...">
            <span class="input-group-btn">
                <button type="button" class="btn btn-primary btn-flat">
                    <i class="fa fa-search"></i>
                </button>
            </span>
        </div>
    </div>
</div>
<div class="container-fluid row lc-margin-bottom">
    <div class="col-sm-8">
        There are <b>1,000</b> Product. Page 1/100
    </div>
    <div class="col-md-4 text-right">
        <div class="btn-group">
            <a href="~/Product/Input" class="btn btn-sm btn-primary">Add Product</a>
            <button type="button" class="btn btn-sm btn-danger">Delete Products</button>
        </div>
    </div>
</div>
<div class="box box-success">
    <div class="box-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width:30px">
                        <input type="checkbox" />
                    </th>
                    <th style="width:50px">#</th>
                    <th style="width:150px">Name</th>
                    <th style="width:150px">QuantityPerUnit</th>
                    <th style="width:120px">UnitPrice</th>
                    <th style="width:300px">Description</th>
                    <th style="width:auto">Image</th>
                    <th style="width:80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>
                            <input type="checkbox" />
                        </td>
                        <td>@(++i)</td>
                        <td>
                            <span class="lc-company-name">
                               @product.ProductName
                            </span>
                            
                        </td>
                        <td>
                            <span class="lc-company-name">
                                @product.QuantityPerUnit
                            </span>

                        </td>
                        <td>
                            <span class="lc-company-name">
                                @product.UnitPrice
                            </span>

                        </td>
                        <td>
                            <span style="display:block">@product.Descriptions</span>
                            
                        </td>
                        <td>
                            <img src="@product.PhotoPath"/>
                        </td>
                        <td class="text-right">
                            <a class="btn btn-sm btn-default" href="~/Product/Input/@i/">
                                <i class="fa fa-edit"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="box-footer clearfix text-center">
        <ul class="pagination pagination-sm no-margin pull-right">
            <li><a href="#">«</a></li>
            <li><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">»</a></li>
        </ul>
    </div>
</div>