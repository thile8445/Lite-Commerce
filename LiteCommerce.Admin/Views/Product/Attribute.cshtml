@model  IEnumerable<LiteCommerce.Admin.Models.Attribute.ProductAttributeModel>
@{
    ViewBag.Title = "Attribute";
    int i = 0;
}

<form method="post" action="~/Product/Attribute">
    <div class="container-fluid row lc-margin-bottom">
        <div class="col-sm-8">
           
        </div>
        <div class="col-md-4 text-right">
            <input type="hidden" name="@ViewBag.Type"/>
            <div class="btn-group">
                <button type="submit" class="btn btn-sm btn-danger">Delete Products</button>
            </div>
            <div class="btn-group">
                <a href="~/Product" class="btn btn-sm btn-primary">Let Later</a>
            </div>
        </div>
    </div>
    <div class="box box-success">
        <div class="box-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width:30px">
                            <input type="checkbox" />
                        </th>
                        <th style="width:50px">#</th>
                        <th style="width:150px">Name</th>
                        <th style="width:auto">Value</th>
                        <th style="width:150px">DisplayOrder</th>
                    
                    </tr>
                </thead>
                <tbody>
                    @foreach (var attribute in Model)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="AttributeIDs" value="@attribute.ProductAttributeID" />
                            </td>
                            <td>@(++i)</td>
                            <td>
                                <input type="hidden" name="@attribute.AttributeID"/>
                                <input type="hidden" name="@attribute.ProductID" />
                                <input type="hidden" name="@attribute.AttributeName" />
                                <span class="lc-company-name">
                                    @attribute.AttributeName
                                </span>

                            </td>
                            <td>
                                <input name="@attribute.AttributeValues" value="" class="form-control"/>
                            </td>
                            <td>
                                <input name="DisplayOrder" value="" class="form-control" />
                            </td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    </div>
    <button type="submit" class="btn btn-sm btn-primary">
        <i class="fa fa-save"></i> Save
    </button>
</form>

