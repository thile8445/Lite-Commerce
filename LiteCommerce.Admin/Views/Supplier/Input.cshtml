@{

}
<div class="box box-primary">
    <form role="form">
        <div class="box-header text-right">
            <a href="~/Supplier">Back to List</a>
        </div>
        <div class="box-body">
            <div class="form-group">
                <label>Company Name:</label>
                <input type="text" class="form-control" placeholder="Enter Company Name">
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Contact Name:</label>
                    <input type="text" class="form-control" placeholder="Contact Name">
                </div>
                <div class="col-sm-6">
                    <label>Contact Title:</label>
                    <input type="text" class="form-control" placeholder="Ex: Sale Manager">
                </div>
            </div>
            <div class="form-group">
                <label>Address:</label>
                <input type="text" class="form-control" placeholder="Address">
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Country:</label>
                    <select class="form-control">
                        <option value="">-- Choose Country --</option>
                        <option value="USA">USA</option>
                        <option value="UK">United Kingdom</option>
                        <option value="CHINA">China</option>
                        <option value="VN">Vietnam</option>
                    </select>
                </div>
                <div class="col-sm-6">
                    <label>City:</label>
                    <input type="text" class="form-control" placeholder="Ex: New Orleans">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Phone:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="col-sm-6">
                    <label>Fax:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-fax"></i>
                        </div>
                        <input type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Home page:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-link"></i>
                    </div>
                    <input type="text" class="form-control" placeholder="ex: http://company.com">
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Supplier">
                Cancel
            </a>
        </div>
    </form>
</div>
