@model LiteCommerce.Admin.Models.CountryPaginationResult
@{
    ViewBag.Title = "Manage Country";
    int i = 0;
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Country" method="get">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control" placeholder="Input search value..." name="searchValue" value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>
<form action="~/Country/Delete" method="post">
    <div class="container-fluid row lc-margin-bottom">
        <div class="col-sm-8">
            There are <b>@Model.RowCount</b> Customers. Page @string.Format("{0}/{1}", Model.Page, Model.PageCount)
        </div>
        <div class="col-md-4 text-right">
            <div class="btn-group">
                <a href="~/Country/Input" class="btn btn-sm btn-primary">Add Employee</a>
                <button type="submit" class="btn btn-sm btn-danger">Delete Employees</button>
            </div>
        </div>
    </div>
    <div class="box box-success">
        <div class="box-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width:30px">
                            <input type="checkbox" name="select-country" id="select-country"/>
                        </th>
                        <th style="width:50px">#</th>
                        <th style="width:auto">CountryName</th>
                        <th style="width:auto">Abbreviation</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var country in Model.Data)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" value="@country.CountryID" name="countries" />
                            </td>
                            <td>@(++i)</td>
                            <td>
                                <span class="lc-company-name">
                                    @country.CountryName
                                </span>
                                
                            </td>
                            <td>
                                <span class="lc-company-name">
                                    @country.Abbreviation
                                </span>
                            </td>

                            <td class="text-right">
                                <a class="btn btn-sm btn-default" href="~/Country/Input/@country.CountryID/">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>
<div class="box-footer clearfix text-center">
    <ul class="pagination pagination-sm no-margin pull-right">
        @if (Model.Page > 1)
            {
            <li><a href="~/Country?page=@(Model.Page - 1)&searchValue=@Model.SearchValue">&laquo;</a></li>
        }
        @if (Model.Page > 3)
            {
            <li><a href="~/Country?page=1&searchValue=@(Model.SearchValue)">1</a></li>
            <li class="dots"><a href="#">...</a></li>
        }
        @if (Model.Page - 2 > 0)
            {
            <li><a href="~/Country?page=@(Model.Page-2)&searchValue=@Model.SearchValue">@(Model.Page - 2)</a></li>
        }
        @if (Model.Page - 1 > 0)
            {
            <li><a href="~/Country?page=@(Model.Page-1)&searchValue=@Model.SearchValue">@(Model.Page - 1)</a></li>
        }
        <li class="active"><a href="~/Country?page=@Model.Page&searchValue=@Model.SearchValue">@Model.Page</a></li>
        @if (Model.Page + 1 < Model.PageCount + 1)
            {
            <li><a href="~/Country?page=@(Model.Page+1)&searchValue=@Model.SearchValue">@(Model.Page + 1)</a></li>
        }
        @if (Model.Page + 2 < Model.PageCount + 1)
            {
            <li><a href="~/Country?page=@(Model.Page+2)&searchValue=@Model.SearchValue">@(Model.Page + 2)</a></li>
        }
        @if (Model.Page < Model.PageCount - 2)
            {
            <li class="dots"><a href="#">...</a></li>
            <li><a href="~/Country?page=@Model.PageCount&searchValue=@Model.SearchValue">@Model.PageCount</a></li>
        }
        @if (Model.Page < Model.PageCount)
            {
            <li><a href="~/Country?page=@(Model.Page + 1)&searchValue=@Model.SearchValue">&raquo;</a></li>
        }
    </ul>
</div>

