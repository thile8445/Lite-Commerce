@model LiteCommerce.DomainModels.Employee
@{

}
<div class="box box-primary">
    <form role="form" action="~/Employee/Input" method="post" enctype="multipart/form-data">
        <div class="box-header text-right">
            <a href="~/Employee">Back to List</a>
        </div>
        <div class="box-body">
            <div class="form-group row">
                <div class="col-sm-10">
                    <div class="form-group">
                        <input type="hidden" value="@Model.EmployeeID" name="EmployeeID" />
                        <label>Title: @Html.ValidationMessage("Title", new { @style = "color: red" })</label>
                        <input type="text" class="form-control" placeholder="Ex: Sale Manager" value="@Model.Title" name="Title">
                    </div>
                    <div class="form-group">
                        <label>Fist Name:@Html.ValidationMessage("FirstName", new { @style = "color: red" })</label>
                        <input type="text" class="form-control" placeholder="Fist Name" value="@Model.FirstName" name="FirstName">
                    </div>
                    <div class="form-group">
                        <label>Last Name:@Html.ValidationMessage("LastName", new { @style = "color: red" })</label>
                        <input type="text" class="form-control" placeholder="Enter Last Name" value="@Model.LastName" name="LastName">
                    </div>
                    <div class="form-group">
                        <label>Address:</label>
                        <input type="text" class="form-control" placeholder="Address" value="@Model.Address" name="Address">
                    </div>
                </div>
                <div class="col-sm-2">
                   @if (Model.EmployeeID != 0)
                    {
                    <div class="form-group">
                        <label>Image:</label>
                        <div class="input-group" style="width:auto ; height:auto ;">
                            <img src="~/Images/uploads/@Model.PhotoPath" class="img-responsive " />
                        </div>
                    </div>
                   }
                    else if (Model.EmployeeID == 0)
                    {
                        <div class="form-group">
                            <label>Image:</label>
                            <div class="input-group" style="width:auto ; height:auto ;">
                                <img src="~/Images/uploads/unknown.jpg" class="img-responsive " />
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Country:</label>
                    @Html.DropDownListFor(m => m.Country,
                      SelectListHelper.Countries(), new { @class = "form-control" })
                </div>
                <div class="col-sm-6">
                    <label>City:</label>
                    <input type="text" class="form-control" placeholder="Ex: New Orleans" value="@Model.City" name="City">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Birth Date:@Html.ValidationMessage("BirthDate", new { @style = "color: red" })</label>
                    <input type="datetime" class="form-control"  value="@Model.BirthDate" name="BirthDate">
                </div>
                <div class="col-sm-6">
                    <label>Hire Date:@Html.ValidationMessage("HireDate", new { @style = "color: red" })</label>
                    <input type="datetime" class="form-control"  value="@Model.HireDate" name="HireDate">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>HomePhone:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <input type="text" class="form-control" name="HomePhone" value="@Model.HomePhone">
                    </div>
                </div>
                <div class="col-sm-6">
                    <label>Email:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-envelope-o"></i>
                        </div>
                        <input type="text" class="form-control" value="@Model.Email" name="Email">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>PhotoPath:</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-link"></i>
                    </div>
                    <input type="file" class="form-control" name="PhotoPath" value="@Model.PhotoPath">
                </div>
                <input type="hidden" class="form-control" name="PhotoPathDraft" value="@Model.PhotoPath">
            </div>
            
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Notes:</label>
                    <input type="text" class="form-control" placeholder="notes" value="@Model.Notes" name="Notes">
                </div>
                
                    
                    @if (Model.EmployeeID == 0)
                    {
                        <div class="col-sm-6">
                            <label>Password:@Html.ValidationMessage("Password", new { @style = "color: red" })</label>
                            <input type="password" class="form-control" placeholder="Password" value="@Model.Password" name="Password">

                        </div>
                    }
                @if (Model.EmployeeID != 0)
                {
                   
                        <input type="hidden" class="form-control" placeholder="Password" value="@Model.Password" name="Password">

                  
                }

            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>  
            @if (Model.EmployeeID != 0)
            {
                <a class="btn btn-sm btn-success" href="~/Employee/ChangePassword/@Model.EmployeeID">
                    Change Password
                </a>
            }
            
            <a class="btn btn-sm btn-default" href="~/Employee">
                Cancel
            </a>
        </div>
    </form>
</div>
