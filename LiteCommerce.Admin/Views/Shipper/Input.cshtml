@model LiteCommerce.DomainModels.Shipper
@{

}
<div class="box box-primary">
    <form role="form" method="post" action="~/Shipper/Input">
        <div class="box-header text-right">
            <a href="~/Shipper">Back to List</a>
        </div>
        <div class="box-body">
            <input type="hidden" value="@Model.ShipperID" name="ShipperID"/>
            <div class="form-group">
                <label>Company Name:@Html.ValidationMessage("CompanyName",new { @style ="color:red"})</label>
                <input type="text" class="form-control" placeholder="Enter Company Name" name="CompanyName" value="@Model.CompanyName">
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Phone:</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <input type="text" class="form-control" name="Phone" value="@Model.Phone">
                    </div>
                </div>
            </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Shipper">
                Cancel
            </a>
        </div>
    </form>
</div>
