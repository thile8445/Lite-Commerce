@model  LiteCommerce.Admin.Models.CustomerPaginationResult
@{
    ViewBag.Title = "Manager Customers";
    int i = 0;
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Customer" method="get">
            <div class="row">
                <div class="col-sm-6">
                    @Html.DropDownList("Country",
                      SelectListHelper.Countries(), new { @class = "form-control" })
                </div>
                
                <div class="col-sm-6">
                    <div class="input-group ">
                        <input type="text" class="form-control" placeholder="Input search value..." name="searchValue" value="@Model.SearchValue">
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<form action="~/Customer/Delete" method="post">
    <div class="container-fluid row lc-margin-bottom">
        <div class="col-sm-8">
            There are <b>@Model.RowCount</b> Customers. Page @string.Format("{0}/{1}", Model.Page, Model.PageCount)
        </div>
        <div class="col-md-4 text-right">
            <div class="btn-group">
                <a href="~/Customer/Input" class="btn btn-sm btn-primary">Add Customer</a>
                <button type="submit" class="btn btn-sm btn-danger">Delete Customer</button>
            </div>
        </div>
    </div>
    <div class="box box-success">
        <div class="box-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th style="width:30px">
                            <input type="checkbox" />
                        </th>
                        <th style="width:50px">#</th>
                        <th style="width:auto">Name</th>
                        <th style="width:200px">Address</th>
                        <th style="width:200px">Contact Info</th>
                        <th style="width:80px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var customer in Model.Data)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" value="@customer.CustomerID" name="customerIDs"/>
                            </td>
                            <td>@(++i)</td>
                            <td>
                                <span class="lc-company-name">
                                    @customer.CompanyName
                                </span>
                                <span class="lc-contact-title">
                                    @customer.ContactTitle
                                </span>
                                <span class="lc-contact-name">
                                    @customer.ContactName
                                </span>
                            </td>
                            <td>
                                <span style="display:block">@customer.Address</span>
                                <span>@customer.Country</span>
                            </td>
                            <td>
                                <p style="display:block"><i class="fa fa-phone"></i> @customer.Phone</p>
                                <p style="display:block"><i class="fa fa-fax"></i> @customer.Fax</p>

                            </td>
                            <td class="text-right">
                                <a class="btn btn-sm btn-default" href="~/Customer/Input/@customer.CustomerID/">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
</form>
<div class="box-footer clearfix text-center">
    <ul class="pagination pagination-sm no-margin pull-right">
        @if (Model.Page > 1)
            {
            <li><a href="~/Customer?page=@(Model.Page - 1)&searchValue=@Model.SearchValue&country=@Model.country">&laquo;</a></li>
        }
        @if (Model.Page > 3)
            {
            <li><a href="~/Customer?page=1&searchValue=@(Model.SearchValue)&country=@Model.country">1</a></li>
            <li class="dots"><a href="#">...</a></li>
        }
        @if (Model.Page - 2 > 0)
            {
            <li><a href="~/Customer?page=@(Model.Page-2)&searchValue=@Model.SearchValue&country=@Model.country">@(Model.Page - 2)</a></li>
        }
        @if (Model.Page - 1 > 0)
            {
            <li><a href="~/Customer?page=@(Model.Page-1)&searchValue=@Model.SearchValue&country=@Model.country">@(Model.Page - 1)</a></li>
        }
        <li class="active"><a href="~/Customer?page=@Model.Page&searchValue=@Model.SearchValue&country=@Model.country">@Model.Page</a></li>
        @if (Model.Page + 1 < Model.PageCount + 1)
            {
            <li><a href="~/Customer?page=@(Model.Page+1)&searchValue=@Model.SearchValue&country=@Model.country">@(Model.Page + 1)</a></li>
        }
        @if (Model.Page + 2 < Model.PageCount + 1)
            {
            <li><a href="~/Customer?page=@(Model.Page+2)&searchValue=@Model.SearchValue&country=@Model.country">@(Model.Page + 2)</a></li>
        }
        @if (Model.Page < Model.PageCount - 2)
            {
            <li class="dots"><a href="#">...</a></li>
            <li><a href="~/Customer?page=@Model.PageCount&searchValue=@Model.SearchValue&country=@Model.country">@Model.PageCount</a></li>
        }
        @if (Model.Page < Model.PageCount)
            {
            <li><a href="~/Customer?page=@(Model.Page + 1)&searchValue=@Model.SearchValue&country=@Model.country">&raquo;</a></li>
        }
    </ul>
</div>
